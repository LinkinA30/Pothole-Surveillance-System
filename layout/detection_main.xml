<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2962FF">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/rounded_fill_border_light2"
        app:layout_constraintBottom_toBottomOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/pothole_upload"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:srcCompat="@drawable/pothole_upload" />

    <View
        android:id="@+id/gallery_upload"
        android:layout_width="155dp"
        android:layout_height="120dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/fill_white_blue_border2"
        android:translationZ="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pothole_upload" />

    <View
        android:id="@+id/detection_view"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/fill_white_blue_border2"
        android:translationZ="5dp"
        app:layout_constraintBottom_toTopOf="@+id/view8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gallery_upload"
        app:layout_constraintVertical_bias="0.3" />

    <View
        android:id="@+id/camera_upload"
        android:layout_width="155dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/fill_white_blue_border2"
        android:translationZ="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pothole_upload" />

    <View
        android:id="@+id/view8"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#EDEDED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/detectionpg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/gallery_upload"
        app:layout_constraintEnd_toEndOf="@+id/gallery_upload"
        app:layout_constraintStart_toStartOf="@+id/gallery_upload"
        app:layout_constraintTop_toTopOf="@+id/gallery_upload"
        app:layout_constraintVertical_bias="0.110000014"
        app:srcCompat="@drawable/upload_gallery" />

    <ImageView
        android:id="@+id/directionspg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/detection_view"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="@+id/detection_view"
        app:layout_constraintTop_toTopOf="@+id/detection_view"
        app:srcCompat="@drawable/detection_icon" />

    <ImageView
        android:id="@+id/workinprogresspg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/camera_upload"
        app:layout_constraintEnd_toEndOf="@+id/camera_upload"
        app:layout_constraintStart_toStartOf="@+id/camera_upload"
        app:layout_constraintTop_toTopOf="@+id/camera_upload"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/upload_camera2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/arbutus"
        android:text="GALLERY"
        android:textColor="#304FFE"
        android:textSize="15sp"
        android:translationZ="15dp"
        app:layout_constraintEnd_toEndOf="@+id/gallery_upload"
        app:layout_constraintStart_toStartOf="@+id/gallery_upload"
        app:layout_constraintTop_toBottomOf="@+id/detectionpg" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/arbutus"
        android:text="DETECT"
        android:textColor="#304FFE"
        android:textSize="26sp"
        android:translationZ="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/detection_view"
        app:layout_constraintEnd_toEndOf="@+id/detection_view"
        app:layout_constraintTop_toTopOf="@+id/detection_view" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/arbutus"
        android:text="CAMERA"
        android:textColor="#304FFE"
        android:textSize="15sp"
        android:translationZ="15dp"
        app:layout_constraintEnd_toEndOf="@+id/camera_upload"
        app:layout_constraintStart_toStartOf="@+id/camera_upload"
        app:layout_constraintTop_toBottomOf="@+id/workinprogresspg" />

    <View
        android:id="@+id/view10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_maps"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view8" />

    <View
        android:id="@+id/Logout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view8"
        app:layout_constraintVertical_bias="0.5" />

    <View
        android:id="@+id/home_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view8" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arbutus"
        android:text="Upload an Image"
        android:textColor="#2962FF"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ifpothole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/arbutus"
        android:text="."
        android:textColor="#D50000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pothole_upload" />

</androidx.constraintlayout.widget.ConstraintLayout>